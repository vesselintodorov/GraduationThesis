
@model EventSystem.Web.Models.Event.CourseLectureViewModel
@{
    int eventId = Convert.ToInt32(ViewBag.EventId);
}
@using Resources;

<script src="~/Scripts/App/lectures.js"></script>

@using (Ajax.BeginForm("AddLecture", "Event",
    new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "lectures.onAddLectureSucess",
        OnFailure = "lectures.onAddLectureFailure"
    },
    new { @class = "form-horizontal", role = "form" }))
{

    @Html.Hidden("EventId", eventId)

    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.LectureTitle, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.LectureTitle, string.Empty, new { @class = "form-control", placeholder = EventsResource.LectureTitlePlaceholder })
            @Html.ValidationMessageFor(m => m.LectureTitle)
        </div>
    </div>


    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.LectureDescription, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.LectureDescription, string.Empty, new { @class = "form-control", placeholder = EventsResource.LectureDescriptionPlaceholder })
            @Html.ValidationMessageFor(m => m.LectureDescription)
        </div>
    </div>

    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.LectureTeacher, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.LectureTeacher, string.Empty, new { @class = "form-control", placeholder = EventsResource.LectureTeacherPlaceholder })
            @Html.ValidationMessageFor(m => m.LectureTeacher)
        </div>
    </div>

    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.LectureDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.LectureDate, string.Empty, new { @class = "form-control datepicker", placeholder = EventsResource.LectureDatePlaceholder })
            @Html.ValidationMessageFor(m => m.LectureDate)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@EventsResource.AddLecture" />
        </div>
    </div>
}

<div id="lectureModalContainer">

</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>