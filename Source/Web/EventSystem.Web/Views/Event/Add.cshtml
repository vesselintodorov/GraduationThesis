<script>
    $(document).ready(function () {
        $('.datepicker').datepicker({
            orientation: "bottom auto"
        }); //Initialise any date pickers
    });
</script>

@model EventSystem.Web.Models.Event.AddEventInputModel
@using Resources;
@{
    ViewBag.Title = Global.AddEventPageMsg;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Add", "Event", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Type,
            Enum.GetNames(typeof(EventSystem.Data.Common.Enums.EventType))
            .Select(e => new SelectListItem
            {
                Text = e
                //Value = ((int)Enum.Parse(typeof(EventSystem.Data.Common.Enums.EventType), e)).ToString()
            }), new { @class = "form-control" })

        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.StartDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control datepicker", placeholder = "Enter start date..." })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EndDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control datepicker", placeholder = "Enter end date..." })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@Global.Add" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





