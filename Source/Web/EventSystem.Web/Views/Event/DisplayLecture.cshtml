@model EventSystem.Web.Models.Event.CourseLectureViewModel
<div id="lectureModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridModalLabel">@Model.LectureTitle</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid bd-example-row">
                    <div>@Model.LectureDescription</div>
                    <div>@Model.LectureTeacher</div>
                    <div>@Model.LectureDate</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
